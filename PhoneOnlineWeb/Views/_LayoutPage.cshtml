                        <li><a href="/Login/Register"><span class="glyphicon glyphicon-user"></span> Đăng ký</a></li>
                        <li><a href="/Login/Index"><span class="glyphicon glyphicon-log-in"></span> Đăng nhập</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div style="padding:0 18.5%;">
        @RenderBody()
    </div>
    <!--footer-->
    <footer class="footer-distributed">
        <div class="footer-left">
            <a class="navbar-brand" href="/Home" style="padding:0;">SMARTPHONE</a>
            

            <p class="footer-link">
                <a href="Index.html">Trang chủ</a>
                |
                <a href="Product.html">Sản phẩm</a>
                |
                <a href="News.html">Tin tức</a>
                |
                <a href="Contact.html">Liên hệ</a>
            </p>

            <p class="footer-name-page">Copyright 2021 <strong>NIGHT HOWLER </strong>All right reserved</p>
        </div>

        <div class="footer-centre">
            <div class="">
                <i class="fa fa-map-marker"></i>
                <p><span>828 Sư Vạn Hạnh, Phường 13, Quận 10, TP. Hồ Chí Minh</span></p>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <p>111-222-3333</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="#">xyz@gmail.com</a></p>
